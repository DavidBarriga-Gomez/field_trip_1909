<h1>Passenger: <%= @passenger.name %></h1>

<h3>Passenger Flights</h3>
<% @passenger.flights.each do |flight| %>
  <p><%= link_to flight.number, "/flights/#{flight.id}", method: :get %></p>
<% end %>

<h2>Add Flight</h2>

<%= form_tag "/passengers/#{@passenger.id}/edit", method: :patch do %>
  <%= label_tag :flight_number %>
  <%= text_field_tag :flight_number %>

  <%= submit_tag 'Submit' %>
<% end %>
